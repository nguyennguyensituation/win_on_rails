<article>
  <h2>My account</h2>

  <section>
    <h3 id="profile">Profile</h3>

    <p><b>Username:</b> <%= @user[:username] %></p>

    <p><b>Password:</b> <%= format_masked_password(session[:password_length]) %></p>
     <%= link_to "Delete", user_path(@user),  method: :delete, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to delete this account?"
                  } %>

  </section>

  <section>
    <h3>Stats</h3>

    <table>
      <thead>
        <tr>
          <th>Category</th>
          <th>Number of wins</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |name, value| %>
          <tr>
            <td><%= name %></td>
            <td><%= value %></td>
          </tr>
        <% end %>
        <tr>
          <td >total</td>
          <td><%= @total %></td>
        </tr>
      </tbody>
    </table>

  </section>
</article>

<nav>
  <%= link_to "Go back", user_path(@user) %>
</nav>