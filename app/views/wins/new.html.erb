<%= form_with model: [ @user, @user.wins.build ] do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, placeholder: "Enter a title", value: session[:title]   %><br>

  <%= form.label :description %>
  <%= form.text_area :description, placeholder: "Enter a description", value: session[:description]  %><br>

  <%= form.label :category %>
  <%= form.select :category, ['milestone', 'project', 'kudos', 'learning', 'other'], include_blank: "Choose a category" %><br>

  <%= form.label "Date completed" %>
  <%= form.date_select :accomplished_date, include_blank: true, selected: Date.today %><br>

  <%= form.submit %><br>
<% end %>

<%= render "application/errors", errors: @errors %>

<nav>
  <%= link_to "Go back", user_path(@user) %>
</nav>


