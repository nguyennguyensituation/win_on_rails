<h2>My Wins</h2>
<%= link_to "Add win", new_user_win_path(@user) %>

<section>
  <% if @wins.empty? %>
    <p>It looks like you haven't added any wins yet.</p>
  <% else %>
    <% @wins.each do |win| %>
      <%= link_to user_win_path(id: win.id) do %>
      <article class="card">
        <h4><%= win.title %></h4>
        <p><%= format_date(win.accomplished_date) %></p>
      </article>
      <% end %>
    <% end %>
  <% end %>
</section>
