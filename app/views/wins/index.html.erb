<h2>My Wins</h2>
<menu>
  <%= link_to "Add win", new_user_win_path(@user) %>
</menu>

<section id="card-container">
  <% if @wins.empty? %>
    <p>It looks like you haven't added any wins yet.</p>
  <% else %>
    <% @wins.each do |win| %>
      <%= link_to user_win_path(id: win.id) do %>
      <article class="card">
        <%= image_tag("card-icon-#{win.category}.png", alt: "profile icon", class: "card-icon" ) %>
        <h4><%= win.category %></h4>
        <h3><%= win.title %></h3>
        <p><%= format_date(win.accomplished_date) %></p>
      </article>
      <% end %>
    <% end %>
  <% end %>
</section>
