<%= form_tag sessions_path do %>
  <h2>Sign in</h2>
  
  <%= label_tag "Username" %>
  <%= text_field_tag :username, nil, placeholder: "Enter your password...", value: session[:username_entered] %><br>


  <%= label_tag "Password" %>
  <%= password_field_tag :password, nil, placeholder: "Enter your password..." %><br>

  <%= submit_tag "Log In" %><br>

  <%= link_to "Create new account", create_account_path%>
<% end %>

<%= render "application/errors", errors: @errors %>
